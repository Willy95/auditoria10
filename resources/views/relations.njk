{% extends "templates.dashboard" %}

{% block css %}
<link rel="stylesheet" href="/libs/bootstrap-table/bootstrap-table.min.css">
{% endblock %}

{% block title %}
  Formulario de Relación
{% endblock %}

{% block content %}
<div class="row" id="sectionTable">
  <div class="col-xs-12">
    <div class="">
      <button type="button" class="btn btn-primary" id="add">Registrar Relación</button><br><br>
    </div>
    <div>
      <table id="relacionTable" class="table table-responsive table-stripped table-hovered">
        <thead>
          <tr>
            <th>Relación</th>
            <th>Acciones</th>           
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>

{# Ocultamos esta seccion por el momento. Será mostrada en su momento #}
<div class="row" hidden="hidden" id="sectionData">
  <div class="col-xs-12">
    <div class="">
      <form role="form" class="form-horizontal">
        <div class="form-group">
          <label class="col-md-2 control-label">Empresa</label>
            <div class="col-md-10">
              <div class="input-group">
                <select class="form-control" id="company">
                  {% for company in business %}
                    <option value="{{ company.id }}">{{ company.name }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
          </div>
        <div class="form-group">
          <label class="col-md-2 control-label">Departamento</label>
            <div class="col-md-10">
              <div class="input-group">
                <select class="form-control" id="departamento">
                </select>
              </div>
            </div>
          </div>
          <div class="form-group">
          <label class="col-md-2 control-label">Auditoria</label>
            <div class="col-md-10">
              <div class="input-group">
                <select class="form-control" id="auditoria">
                  {% for audit in audits %}
                    <option value="{{ audit.id }}">{{ audit.name }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
          </div>
      </form>
    </div>
  </div>
  <div class="col-md-6"></div>
  <div class="col-md-3"> <button class="btn-default btn btn-block" id="btnCancel">Cancelar</button></div>
  <div class="col-md-3"><button class="btn-primary btn btn-block" id="save" data-business="{{business}}" data-departamento="{{departamento}}">Guardar Información</button></div>
</div>
{% endblock %}

{% block js %}
<script src="/libs/bootstrap-table/bootstrap-table.min.js" charset="utf-8"></script>
<script src="/libs/bootstrap-table/locale/bootstrap-table-es-MX.js" charset="utf-8"></script>
  <script type="text/javascript" src="/scripts/relacion.js"></script>
{% endblock %}

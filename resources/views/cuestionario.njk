{% extends "templates.dashboard" %}

{% block css %}
<link rel="stylesheet" href="/libs/bootstrap-table/bootstrap-table.min.css">
  <style media="screen">
    #btnFile{
      cursor: pointer;
    }
  </style>
{% endblock %}

{% block title %}
  Formulario de Preguntas
{% endblock %}

{% block content %}
<div class="row" id="sectionTable">
  <div class="col-xs-12">
    <div class="">
      <button type="button" class="btn btn-primary" id="add">Registrar Preguntas</button><br><br>
    </div>
    <div>
      <table id="cuestionarioTable" class="table table-responsive table-stripped table-hovered">
        <thead>
          <tr>
            <th>Pregunta</th>
            <th>Acciones</th>           
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>

{# Ocultamos esta seccion por el momento. Será mostrada en su momento #}
<div class="row" hidden="hidden" id="sectionData">
  <div class="col-xs-12">
    <div class="">
      <form role="form" class="form-horizontal">
        <div class="form-group">
          <label class="col-md-2 control-label">Pregunta a Ingresar</label>
          <div class="col-md-10">
            <div class="input-group">
              <span class="input-group-addon">
                <i class="fa fa-envelope-o"></i>
              </span>
              <input type="text" class="form-control1" id="pregunta" placeholder="Pregunta">
            </div>
          </div>
        </div>
      </form>
      
    </div>
  </div>
  <div class="col-md-6"></div>
  <div class="col-md-3"> <button class="btn-default btn btn-block" id="btnCancel">Cancelar</button></div>
  <div class="col-md-3"><button class="btn-primary btn btn-block" id="save" data-audit="{{audit}}">Guardar Información</button></div>
</div>
{% endblock %}

{% block js %}
<script src="/libs/bootstrap-table/bootstrap-table.min.js" charset="utf-8"></script>
<script src="/libs/bootstrap-table/locale/bootstrap-table-es-MX.js" charset="utf-8"></script>
  <script type="text/javascript" src="/scripts/cuestionario.js"></script>
{% endblock %}

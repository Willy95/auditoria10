{% extends "templates.dashboard" %}

{% block css %}
<link rel="stylesheet" href="/libs/bootstrap-table/bootstrap-table.min.css">
  <style media="screen">
    #btnFile{
      cursor: pointer;
    }
    .form-horizontal
    {
      padding-left: 2rem;
    }
  </style>
{% endblock %}

{% block title %}
  Formulario de Preguntas
{% endblock %}

{% block content %}
<div class="row" id="sectionTable">
  <div class="col-xs-12">
    <div class="">
<form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>Cuestionario</legend>

<!-- Multiple Radios -->
{% for item in questions %}
  <div class="control-group">
    <label class="control-label" for="radiosPreg" id="question">
      {{ item.question }}
    </label>
    <div class="controls">
      <label class="radio" for="radiosPreg1">
        <input type="radio" name="radiosPreg{{item.id}}" class="yes">
        SÃ­
      </label>
      <label class="radio" for="radiosPreg0">
        <input type="radio" name="radiosPreg{{item.id}}" class="no" checked="checked">
        No
      </label>
    </div>
  </div>
{% endfor %}
<!-- Button -->
<div class="control-group">
  <label class="control-label" for="singleEnviar"></label>
  <div class="controls">
    <button id="singleEnviar" name="singleEnviar" class="btn btn-success">Enviar</button>
  </div>
</div>

</fieldset>
</form>
{% endblock %}
{% block js %}
<script src="/libs/bootstrap-table/bootstrap-table.min.js" charset="utf-8"></script>
<script src="/libs/bootstrap-table/locale/bootstrap-table-es-MX.js" charset="utf-8"></script>
<script type="text/javascript" src="/scripts/encuesta.js"></script>
{% endblock %}
